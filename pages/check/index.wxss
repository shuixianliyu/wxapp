/* pages/order/index.wxss */

page {
  background: #fdfbfb;
}

.top {
  padding: 40rpx;
}

.cost {
  margin: 0 auto;
  padding: 20rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  overflow: hidden;
}

.total {
  color: rgb(82, 78, 78);
  vertical-align: middle;
}

.consumption {
  width: 240rpx;
  float: right;
}

.placeholder {
  font-size: 28rpx;
  color: #b4b3b3;
}

.discount {
  padding: 20rpx 0;
  margin: 0 auto;  
  color: rgb(82, 78, 78);
}
.choose {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  text-align: center;
  vertical-align: middle;
}
.center {
  background: #fff;
}
.item {
  padding: 10rpx 40rpx;
  line-height: 2;
  overflow: hidden;
}

.price {
  float: right;
  color: #cc1c19;
}

.pay button {
  width: 80%;
  margin-top: 200rpx;
}
