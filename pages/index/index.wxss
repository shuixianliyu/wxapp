/**index.wxss**/
.title {
  display: flex;
  flex-direction: row;
  padding: 40rpx;
  border-bottom: 1px solid #e8e8e8;
}

.title image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
}

.title .center {
  margin: 0 auto;
}

.title .center .name {
  line-height: 60rpx;
}

.title .center .time {
  line-height: 60rpx;
  color: #7a7676;
}

.address {
  /* height: 45px;
  line-height: 45px;
  padding: 0 40rpx; */
  padding: 6px 40rpx;
  line-height: 15px;
  border-bottom: 1px solid #e8e8e8;
  overflow: hidden;
}
.commonIcon {
  margin-right:10rpx;
  color:#3d3c3c;
}
.service {
  display: flex;
  flex-direction: row;
  padding: 10px 40rpx;
}

.service view {
  flex: 1;
  /* text-align: center; */

}
.color {
  font-weight: bold;
  color: #e4a048;
}
.service view text {
  margin-left:10rpx;
}
.order {
  height: 50px;
  line-height: 50px;
  padding: 0 40rpx;
  overflow: hidden;
}

.button {
  float: right;
  margin-top: 10px;
}

button::after {
  border: none;
  line-height: 0;
}
